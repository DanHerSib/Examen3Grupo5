@page
@model WebApp.Pages.Cliente.GridModel
@{
    ViewData["Title"] = "Cliente";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Cliente
        </div>
        <div class="card-body">
            <a  class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID Cliente</th>
                                <th>Nombre Completo</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.ClienteId</td>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Direccion</td>
                                <td>@item.Telefono</td>
                                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.ClienteId"><i class='bx bx-edit-alt'></i></a>

                                    <button type="button" class="btn btn-danger" onclick="ClienteGrid.OnClickEliminar(@item.ClienteId)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tboby>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script defer src="~/App/Cliente/Grid.js"></script>
}
